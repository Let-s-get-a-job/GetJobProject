<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper

  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"

  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.spring.getjob.board.mapper.BoardMapper">
  
  <sql id="searchCondition">
		<if test="searchType != null">
			<if test="searchType == 'title'.toString()">
				and title like concat('%', #{keyword}, '%')
			</if>
			<if test="searchType == 'content'.toString()">
				and content like concat('%', #{keyword}, '%')
			</if>
			<if test="searchType == 'writer'.toString()">
				and writer like concat('%', #{keyword}, '%')
			</if>
		</if>
	</sql>
  
  	<select id="selectList" parameterType="com.spring.getjob.board.vo.BoardVO" resultType="com.spring.getjob.board.vo.BoardVO">
        select * from board
    </select>
    
    <insert id="insertBoard">
        insert into
        board(
            title
            , content
            , writer
            , reg_datetime)
        values(
            #{title}
            , #{content}
            , #{writer}
            , now())
    </insert>
    
    <update id="updateBoard">
        update board set
            title = #{title}
            , content = #{content}
            , writer = #{writer}
            , reg_datetime = now()
        where
            id = #{id}
    </update>
    
    <delete id="deleteBoard">
        delete from board
        where
            id = #{id}
    </delete>
    
    <select id="selectBoard" parameterType="com.spring.getjob.board.vo.BoardVO" resultType="com.spring.getjob.board.vo.BoardVO">
        select * from board
        where
            id = #{id}
    </select>
    
    <update id="updateViewCnt">
    	update board set
    		view_cnt = view_cnt + 1
    		where
    		 id = #{id}
    </update>
    
    <select id="getTotalCount" resultType="int">
    	select count(id) 
    	from board
    	where id > 0
    	<include refid="searchCondition"></include> 
    </select>
    
    <select id="listPage" resultType="com.spring.getjob.board.vo.BoardVO">
    	select *
    	from board
    	where id > 0
    	<include refid="searchCondition"></include>
    	order by id desc, reg_datetime desc
    	limit #{pageStart}, #{perPageNum}
    
    </select>
    
  
  
  </mapper>